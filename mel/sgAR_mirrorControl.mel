global proc sgAR_mirrorControl (string $items[]){

string $items[];
string $obj;
string $mirror;

for($obj in $items){
	select -r $obj;
	DeleteHistory;
	makeIdentity -apply true -t 1 -r 1 -s 1 -n 0;
	move 0 0 0 ($obj + ".scalePivot") ($obj + ".rotatePivot");
	$mirror = ($obj + "mirror");
	duplicate -n $mirror -rc $obj;
	setAttr ($mirror + ".sx") -1;
	}

}